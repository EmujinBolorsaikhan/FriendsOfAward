    private async Task GenerateAndDownloadQrCodes()
    {
        if (qrCodeCount < 1)
        {
            return;
        }

        var ip = NetworkHelper.GetLanIpAddress();
        Console.WriteLine(ip);
        var qrCodeImages = new List<string>();
        var tokens = new List<string>();

        // Generate tokens
        for (int i = 0; i < qrCodeCount; i++)
        {
            var token = Guid.NewGuid().ToString();
            tokens.Add(token);
        }

        // Insert all tokens into database
        var insertedTokens = await QrCodeService.InsertMultipleQrCodeTokens(tokens);

        if (insertedTokens.Count == 0)
        {
            // Handle error - maybe show a message to user
            await JSRuntime.InvokeVoidAsync("alert", "Fehler beim Speichern in der Datenbank!");
            return;
        }

        // Generate QR codes only for successfully inserted tokens
        foreach (var token in insertedTokens)
        {
            var payload = $"http://{ip}:5432/home/{token}";

            using var qrGenerator = new QRCoder.QRCodeGenerator();
            using var qrData = qrGenerator.CreateQrCode(payload, QRCoder.QRCodeGenerator.ECCLevel.Q);
            using var qrCode = new QRCoder.PngByteQRCode(qrData);
            var qrBytes = qrCode.GetGraphic(20);
            var base64Image = Convert.ToBase64String(qrBytes);

            qrCodeImages.Add(base64Image);
        }

        var htmlContent = GenerateHtmlWithQrCodes(qrCodeImages);
        var fileName = $"QR_Codes_{DateTime.Now:yyyyMMdd_HHmmss}.html";
        await JSRuntime.InvokeVoidAsync("downloadFile", fileName, htmlContent, "text/html");

        showQrPopup = false;
        qrCodeCount = 1;
    }
private string GenerateHtmlWithQrCodes(List<string> qrCodeImages)
{
    var html = @"
<!DOCTYPE html>
<html lang='de'>
<head>
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <title>QR Codes</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: Arial, sans-serif;
            display: flex;
